@page
@model library_otomation.Views.Library.AddBookPage
@{
}
@using library_otomation.Models
@model List<Book>

<!-- AddBook.cshtml -->
@{
    ViewData["Title"] = "Add Book";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="../wwwroot/css/site.css" />
    <link rel="stylesheet" href="../Views/Shared/_Layout.cshtml.css" />
    <!-- ==============  remıxıcons ==========-->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/remixicon/4.5.0/remixicon.css" />
    <title>Book Library</title>
</head>

<h2>Add Book</h2>

<form asp-controller="Library" asp-action="Add" method="post">
    <div>
        <label for="name" class="name__label"> Kitap İsmi:</label>
        <input type="text" id="name" name="name" placeholder="Kitap İsmi" required />
    </div>
    <div>
        <label for="author" class="author__label"> Yazar İsmi:</label>
        <input type="text" id="author" name="author" placeholder="Yazar İsmi" required />
    </div>
    <div>
        <label for="year" class="public_year">Basım Yılı:</label>
        <input type="number" id="year" name="year" placeholder="Basım Yılı" required />
    </div>
    <div>
        <button type="submit" class="add__button">Add Book</button>
    </div>
</form>

