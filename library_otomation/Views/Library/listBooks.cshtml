@using library_otomation.Models
@model List<Book>

@{
    ViewData["Title"] = "Library - Book Management";
}

<div class="heading">
   <h3>All Books</h3>
        <p><a asp-controller="Library" asp-action="Index">home </a> <span> / menu</span></p>
</div>

<section class="products">

   <div class="box-container">

      <form accept="" method="post" class="box">
          <img src="~/images/c++ img.jpg" alt="">
          <a>2021</a>
          <div class="name"><b>Learning The C++</b><br/>Justin Hickey</div>
         <div class="flex"></div>
      </form>

      <form accept="" method="post" class="box">
         <img src="~/images/java img.jpg" alt="">
         <a>2017</a>
         <div class="name"><b>Java Programming Fundamentals</b><br/>Premchand S. Nair</div>
         <div class="flex"></div>
      </form>
      
   </div>

</section>
<section class="products" style="padding-top: 0; min-height: 100vh;">
    @if (Model != null && Model.Any())
    {
        <h2>New Added Books</h2>
        <div class="box-container">
            @foreach (var book in Model)
            {
                <form method="post" class="box">
                    <img src="~/images/i.png" alt="@book.Name" />
                    <a>@book.Year</a>
                    <div class="name"><b>@book.Name</b><br />@book.Author</div>
                    <div class="flex"></div>
                </form>
            }
        </div>
    }
    else if (Model.Count == 0 || Model is null)
    {
        <p>No new added books found.</p>
    }

</section>

