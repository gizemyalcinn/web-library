<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="../wwwroot/css/site.css" />
    <link rel="stylesheet" href="../Views/Shared/_Layout.cshtml.css" />
    <!-- ==============  remıxıcons ==========-->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/remixicon/4.5.0/remixicon.css" />
    <title>Book Library</title>
    
    
    <!--========== SWIPER CSS ============-->
    <link rel="stylesheet" href="/css/swiper-bundle.min.css" />
</head>

<body>
    <!--========== HEADER ============-->
<header class="header" id="header">
    <nav class="nav container">
        <a href="#" class="nav__logo">
            <i class="ri-book-3-line"><h1>Book<span class="lib">Library</span></h1></i>
        </a>
        
        <div class="nav__menu">
            <ul class="nav__list">
                <li class="nav__item">
                    <a href="#home" class="nav__link">
                        <i class="ri-home-fill"></i>
                        <span>Home</span>
                    </a>
                </li>
                <li class="nav__item">
                    <a href="#list" class="nav__link">
                        <i class="ri-book-shelf-line"></i>
                        <span>All Books</span>
                    </a>
                </li>


                <li class="nav__item">
                    <a href="#remove" class="nav__link">
                        <i class="ri-delete-bin-7-line"></i>
                        <span>Remove Book</span>
                    </a>
                </li>
                
                <li class="nav__item">
                    <a href="../Views/Library/AddBook.cshtml">Add Book</a>
                </li>

            </ul>

        </div>
        
        <div class="nav__actions">
            <!-- SEARCH BUTTON-->
            <i class="ri-search-2-line" id="search-button"></i>
    
            <!-- theme BUTTON-->
            <i class="ri-moon-line change-theme" id="theme-button"></i>

        </div>

    </nav>


</header>
    <!--======= Search========-->
    <div class="search" id="search-content">
        <form action="" class="search__form">
            <i class="ri-search-2-line search__icon"></i>
            <input type="search" placeholder="Search by book name"  class="search__input" />
        </form>
        <form action="" class="search__form">
            <i class="ri-search-2-line search__icon"></i>
            <input type="search" placeholder="Search by author"  class="search__input" />
        </form>
        <i class="ri-close-large-line search__close" id="search-close"></i>
    </div>

    
    <main role="main" class="pb-3">
        @RenderBody()
    </main>

<footer>
    <div class="footerdiv">
        <div class="footer-col">
        </div>
    </div>
</footer>

    
    <script src="/js/swiper-bundle.min.js"></script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/js/site.js" asp-append-version="true"></script>
@await RenderSectionAsync("Scripts", required: false)
</body>
</html>
